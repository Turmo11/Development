<!-- Config file for the game -->

<config>
  <app framerate_cap="60" frame_cap_on="1">
    <title>Metamorphosis</title>
    <organization>UPC</organization>
  </app>
	
  <renderer>
    <vsync value="true"/>
    <camera x="0" y="0"/>
  </renderer>

  <audio>
    <volume m="0.1f" fx="0.5"/>
    <maxVolume value ="1.0f"/>
  </audio>

  <window>
    <resolution width="1280" height="720" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

 <LogoScene>
    <duration value="20.0f"/>
    <logoRect x="0" y="0" h="640" w="640"/>
  </LogoScene>

  <scene>
    <currentLevel value="1"/>
    <backgroundRect x="0" y="0" h="6816" w="3072"/>
    <cameraRect x="0" y="5000" h="-3800" w="-3150"/>
    <lives>
	<maxLives value="3"/>
        <livesRect x="0" y="0" h="92" w="92"/>
        <livesRect2 x="0" y="0" h="92" w="184"/>
        <livesRect3 x="0" y="0" h="92" w="276"/>
    </lives>
    <cdRect x="0" y="0" h="64" w="128"/>
    <levelCompleted value="false"/>
  </scene>

  <player>
    <acceleration x="2" y="18"/>
    <gravity value="0.75" />
    <speed x="0" y="0" />
    <maxSpeed x="10" y="50"/>
    <hitbox w="30" h="96"/>
    <projectile cd="0.9"/>
  </player>

  <file_system>
    <path>data.zip</path>
    <load_file>save_game.xml</load_file>
    <save_file>save_game.xml</save_file>
  </file_system>

  <map>
    <folder>Assets/maps/</folder>
    <parallax value="0.6f"/>
    <secondParallax value="0.2f"/>
    <normalSpeed value="1.0f"/>
  </map>
</config>